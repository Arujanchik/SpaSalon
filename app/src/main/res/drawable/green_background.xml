<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"> <!-- Используется прямоугольная форма -->
    <solid android:color="#00000000"/> <!-- Полностью прозрачный фон -->
    <!-- Закругленные углы -->
    <corners android:radius="8dp"/>

    <!-- Обводка (опционально) -->
    <stroke
        android:width="10dp"
        android:color="@color/maingreen"/> <!-- Более темный оттенок зеленого для обводки -->

    <!-- Тень (опционально, будет видна только на API 21+) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
