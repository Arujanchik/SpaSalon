<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/green_background"
    android:padding="16dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/certificate_image"
            android:layout_width="wrap_content"
            android:layout_height="188dp"
            android:src="@drawable/certificatephoto" />

        <android.widget.ImageButton
            android:id="@+id/btn_back"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_gravity="top|start"
            android:layout_margin="16dp"
            android:background="@drawable/arrowright"
            android:onClick="onBackClick" />
    </FrameLayout>


    <TextView
        android:id="@+id/certificate_name"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:fontFamily="@font/goblin_one"
        android:gravity="center"
        android:text="Certificate ALOE"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/certificate_description"
        android:layout_width="359dp"
        android:layout_height="199dp"
        android:background="@drawable/green_background"
        android:fontFamily="@font/goblin_one"
        android:gravity="center"
        android:text="Представьте сертификат, открывающий двери в мир красоты и благополучия, где каждая деталь тщательно продумана для вашего удовольствия и релаксации."
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="163dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:fontFamily="@font/baloo_bhaijaan"
        android:gravity="center"
        android:text="Services:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/service_image_1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/haircut" />

        <ImageView
            android:id="@+id/service_image_2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/spa" />

        <ImageView
            android:id="@+id/service_image_3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/makeup" />
    </LinearLayout>


    <!-- Цена и кнопка "Купить" -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/green_background"
        >


        <ImageView
            android:layout_width="114dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="26dp"
            android:layout_toStartOf="@+id/buy_button"
            android:src="@drawable/_550" />

        <android.widget.Button
            android:id="@+id/buy_button"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rectanglebutton"
            android:text="Купить"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>
