<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#fcfee9">


    <ImageView
        android:id="@+id/iv_success_icon"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:src="@drawable/oplata" />

    <android.widget.Button
        android:id="@+id/btn_back_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_success_icon"
        android:layout_marginTop="95dp"
        android:background="@drawable/rectanglebutton"
        android:onClick="onBackHomeClick"
        android:text="на главное меню"
        android:textColor="@color/white" />

</RelativeLayout>
