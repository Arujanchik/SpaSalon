<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
        <solid android:color="#FFFFFF" /> <!-- Цвет фона -->
        <corners android:radius="8dp" /> <!-- Закругление углов -->
        <stroke android:width="1dp" android:color="#DDDDDD" /> <!-- Обводка -->
        <!-- Добавьте следующий элемент, если нужна тень (пример для API 21 и выше) -->
        <padding
            android:left="4dp"
            android:top="4dp"
            android:right="4dp"
            android:bottom="4dp" />
    </shape>

</androidx.constraintlayout.widget.ConstraintLayout>